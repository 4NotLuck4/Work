<Window x:Class="LabWork11.Views.FilmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление фильма" Height="500" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Задание 5.3.1: Элементы управления для ввода данных -->
        <Label Content="Название:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
        <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5" Height="25"/>

        <Label Content="Длительность (мин):" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
        <TextBox x:Name="txtDuration" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" Height="25"/>

        <Label Content="Год выпуска:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
        <TextBox x:Name="txtReleaseDate" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Height="25"/>

        <Label Content="Возрастной рейтинг:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,5"/>
        <!-- Задание 5.3.1: Выпадающий список для возрастного рейтинга -->
        <ComboBox x:Name="cmbAgeRating" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5" Height="25"/>

        <Label Content="Описание:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,5"/>
        <!-- Задание 5.3.1: Многострочное поле ввода для описания -->
        <TextBox x:Name="txtDescription" Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" 
                 Margin="0,0,0,5" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Сохранить" Width="80" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>