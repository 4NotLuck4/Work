<Window x:Class="LabWork11.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление фильмами - Лабораторная работа №11" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Задание 5.1.2: Кнопки Добавить и Удалить -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button x:Name="btnAdd" Content="Добавить" Width="80" Margin="0,0,10,0" Click="BtnAdd_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" Width="80" Click="BtnDelete_Click"/>
        </StackPanel>

        <!-- Задание 5.1.1: DataGrid с фильмами (только для чтения) -->
        <DataGrid x:Name="dataGridFilms" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  MouseDoubleClick="DataGridFilms_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding FilmId}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Длительность" Binding="{Binding Duration}" Width="80"/>
                <DataGridTextColumn Header="Год выпуска" Binding="{Binding ReleaseDate}" Width="80"/>
                <DataGridTextColumn Header="Возрастной рейтинг" Binding="{Binding AgeRating}" Width="120"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StatusBar Grid.Row="2">
            <StatusBarItem Content="Готово"/>
        </StatusBar>
    </Grid>
</Window>